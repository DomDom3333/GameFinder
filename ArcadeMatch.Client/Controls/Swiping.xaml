<UserControl
    KeyDown="Window_Keydown"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d"
    x:Class="GameFinder.Controls.Swiping"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush Center="0.5,0.3" RadiusX="1.2" RadiusY="1.2">
                <GradientStop Color="#1E1E1E" Offset="0" />
                <GradientStop Color="#0A0A0A" Offset="1" />
            </RadialGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Top Bar  -->
        <Border
            Background="{DynamicResource CardBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,0,0,1"
            Grid.Row="0"
            Padding="20,10">
            <Grid>
                <TextBlock
                    FontSize="18"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Left"
                    Text="ðŸŽ® Game Discovery"
                    VerticalAlignment="Center" />
                <wpfui:Button
                    Appearance="Danger"
                    Click="OnLeaveButtonClick"
                    Content="ðŸšª Leave Session"
                    HorizontalAlignment="Right"
                    Padding="15,8" />
            </Grid>
        </Border>

        <!--  Game Card  -->
        <wpfui:Card
            Grid.Row="1"
            HorizontalAlignment="Center"
            Margin="20"
            MaxWidth="900"
            Padding="0"
            VerticalAlignment="Center"
            Width="500"
            x:Name="ProfileCard">
            <ScrollViewer
                HorizontalScrollBarVisibility="Disabled"
                Padding="30"
                VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!--  Game Title  -->
                    <TextBlock
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20"
                        Style="{DynamicResource HeaderTextStyle}"
                        Text="Game Name"
                        x:Name="GameNameTextBlock" />

                    <!--  Game Image  -->
                    <Border
                        ClipToBounds="True"
                        CornerRadius="12"
                        Margin="0,0,0,20">
                        <Image
                            Height="200"
                            Stretch="UniformToFill"
                            Width="400"
                            x:Name="GameImage" />
                    </Border>

                    <!--  Description  -->
                    <TextBlock
                        Margin="0,0,0,20"
                        Style="{DynamicResource BodyTextStyle}"
                        Text="Short Description"
                        x:Name="DescriptionTextBlock" />

                    <!--  Info Sections  -->
                    <StackPanel>
                        <!--  Genres  -->
                        <Border
                            Background="{DynamicResource TertiaryBackgroundBrush}"
                            CornerRadius="8"
                            Margin="0,0,0,15"
                            Padding="15">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,8"
                                    Style="{DynamicResource SubheaderTextStyle}"
                                    Text="ðŸ·ï¸ Genres" />
                                <TextBlock
                                    Style="{DynamicResource BodyTextStyle}"
                                    Text="Genres Info"
                                    x:Name="GenresTextBlock" />
                            </StackPanel>
                        </Border>

                        <!--  Languages  -->
                        <Border
                            Background="{DynamicResource TertiaryBackgroundBrush}"
                            CornerRadius="8"
                            Margin="0,0,0,15"
                            Padding="15">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,8"
                                    Style="{DynamicResource SubheaderTextStyle}"
                                    Text="ðŸŒ Languages" />
                                <TextBlock
                                    Style="{DynamicResource BodyTextStyle}"
                                    Text="Languages Info"
                                    x:Name="LanguagesTextBlock" />
                            </StackPanel>
                        </Border>

                        <!--  Price/Recommendations  -->
                        <Border
                            Background="{DynamicResource TertiaryBackgroundBrush}"
                            CornerRadius="8"
                            Margin="0,0,0,25"
                            Padding="15">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,8"
                                    Style="{DynamicResource SubheaderTextStyle}"
                                    Text="ðŸ’° Pricing" />
                                <TextBlock
                                    Style="{DynamicResource BodyTextStyle}"
                                    Text="Price Info"
                                    x:Name="PriceTextBlock" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!--  Action Buttons  -->
                    <StackPanel
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0"
                        Orientation="Horizontal">
                        <wpfui:Button
                            Appearance="Danger"
                            Click="OnDislikeButtonClick"
                            Content="ðŸ‘Ž Pass"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Height="50"
                            IsEnabled="False"
                            Margin="0,0,20,0"
                            Width="120"
                            x:Name="Dislike" />
                        <wpfui:Button
                            Appearance="Success"
                            Click="OnLikeButtonClick"
                            Content="â¤ï¸ Like"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Height="50"
                            IsEnabled="False"
                            Width="120"
                            x:Name="Like" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </wpfui:Card>
    </Grid>
</UserControl>