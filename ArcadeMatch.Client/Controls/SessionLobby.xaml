<UserControl
    Unloaded="SessionLobby_Unloaded"
    mc:Ignorable="d"
    x:Class="GameFinder.Controls.SessionLobby"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush Center="0.5,0.3" RadiusX="0.8" RadiusY="0.8">
                <GradientStop Color="#1E1E1E" Offset="0" />
                <GradientStop Color="#0F0F0F" Offset="1" />
            </RadialGradientBrush>
        </Grid.Background>

        <wpfui:Card
            HorizontalAlignment="Center"
            Margin="20"
            Padding="30"
            VerticalAlignment="Center"
            Width="500">
            <StackPanel>
                <!--  Header  -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,25">
                    <wpfui:SymbolIcon
                        FontSize="40"
                        Foreground="{DynamicResource AccentBrush}"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,12"
                        Symbol="GroupList24" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        Style="{DynamicResource HeaderTextStyle}"
                        Text="Session Lobby" />
                </StackPanel>

                <!--  Session Code Section  -->
                <Border
                    Background="{DynamicResource AccentBrush}"
                    CornerRadius="10"
                    Margin="0,0,0,20"
                    Padding="15,10">
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            Margin="0,0,10,0"
                            Text="{Binding SessionId, StringFormat='Session Code: {0}'}"
                            VerticalAlignment="Center" />
                        <wpfui:Button
                            Appearance="Light"
                            Click="CopyCode_OnClick"
                            Content="ðŸ“‹ Copy"
                            FontSize="12"
                            Padding="8,4" />
                    </StackPanel>
                </Border>

                <!--  Users List  -->
                <TextBlock
                    HorizontalAlignment="Center"
                    Style="{DynamicResource SubheaderTextStyle}"
                    Text="Connected Players" />

                <Border
                    Background="{DynamicResource TertiaryBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="0,0,0,20"
                    MinHeight="120">
                    <ListBox
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="10"
                        x:Name="UsersListBox">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Opacity" Value="0" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Margin" Value="0,2" />
                                <Setter Property="Padding" Value="0" />
                                <EventSetter Event="Loaded" Handler="OnUserItemLoaded" />
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Background="{DynamicResource HoverBackgroundBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Margin="0,2"
                                    Padding="15,8">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse
                                            Fill="{DynamicResource AccentBrush}"
                                            Height="8"
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Center"
                                            Width="8" />
                                        <TextBlock
                                            FontSize="14"
                                            Text="{Binding DisplayName}"
                                            VerticalAlignment="Center" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <!--  Action Buttons  -->
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <wpfui:Button
                        Appearance="Danger"
                        Click="LeaveButton_Click"
                        Content="ðŸšª Leave"
                        FontSize="14"
                        Margin="0,0,15,0"
                        Padding="20,12" />
                    <wpfui:Button
                        Appearance="Success"
                        Click="StartButton_OnClick"
                        Content="ðŸš€ Start Game"
                        FontSize="14"
                        FontWeight="SemiBold"
                        IsEnabled="{Binding IsAdmin}"
                        Padding="20,12" />
                </StackPanel>
            </StackPanel>
        </wpfui:Card>
    </Grid>
</UserControl>