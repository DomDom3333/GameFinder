<UserControl
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d"
    x:Class="GameFinder.Controls.SessionStart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush Center="0.5,0.3" RadiusX="0.8" RadiusY="0.8">
                <GradientStop Color="#1E1E1E" Offset="0" />
                <GradientStop Color="#0F0F0F" Offset="1" />
            </RadialGradientBrush>
        </Grid.Background>

        <wpfui:Card
            HorizontalAlignment="Center"
            Padding="40"
            VerticalAlignment="Center"
            Width="450">
            <StackPanel Orientation="Vertical">
                <!--  Header Section  -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,30">
                    <wpfui:SymbolIcon
                        FontSize="48"
                        Foreground="{DynamicResource AccentBrush}"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,16"
                        Symbol="People24" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        Style="{DynamicResource HeaderTextStyle}"
                        Text="Join or Create Session" />
                </StackPanel>

                <!--  Display Name Section  -->
                <TextBlock Style="{DynamicResource SubheaderTextStyle}" Text="Display Name" />
                <Border
                    Background="{DynamicResource TertiaryBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="0,0,0,20">
                    <TextBox
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="14"
                        GotFocus="DisplaynameBox_OnGotFocus"
                        LostFocus="DisplaynameBox_OnLostFocus"
                        Padding="15,12"
                        Text="Your Display-name"
                        x:Name="DisplaynameBox" />
                </Border>

                <!--  Action Buttons  -->
                <wpfui:Button
                    Appearance="Success"
                    Click="StartNewSession_OnClick"
                    Content="ðŸŽ® Start New Session"
                    FontSize="16"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,0,15"
                    Padding="20,15" />

                <!--  Divider  -->
                <Border
                    Background="{DynamicResource BorderBrush}"
                    Height="1"
                    Margin="0,10,0,20" />

                <wpfui:Button
                    Appearance="Primary"
                    Click="JoinSession_OnClick"
                    Content="ðŸ¤ Join Existing Session"
                    FontSize="16"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,0,15"
                    Padding="20,15" />

                <!--  Session Code Section  -->
                <TextBlock Style="{DynamicResource SubheaderTextStyle}" Text="Session Code" />
                <Border
                    Background="{DynamicResource TertiaryBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <TextBox
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Consolas"
                        FontSize="16"
                        GotFocus="SessionCodeBox_OnGotFocus"
                        HorizontalContentAlignment="Center"
                        LostFocus="SessionCodeBox_OnLostFocus"
                        Padding="15,12"
                        Text="_ _ _ _"
                        x:Name="SessionCodeBox" />
                </Border>
            </StackPanel>
        </wpfui:Card>
    </Grid>
</UserControl>