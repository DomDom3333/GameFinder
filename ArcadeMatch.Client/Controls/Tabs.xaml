<UserControl
    d:DesignHeight="300"
    d:DesignWidth="600"
    mc:Ignorable="d"
    x:Class="GameFinder.Controls.Tabs"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:selfmade="clr-namespace:GameFinder.Controls"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <TabControl Margin="0" Padding="20,10,20,20">
            <!--  Home Tab  -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <wpfui:SymbolIcon Margin="0,0,8,0" Symbol="Home24" />
                        <TextBlock FontWeight="Medium" Text="Home" />
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <wpfui:Card
                        HorizontalAlignment="Center"
                        Margin="20"
                        Padding="40"
                        VerticalAlignment="Center"
                        Width="500">
                        <StackPanel>
                            <!--  Header  -->
                            <StackPanel HorizontalAlignment="Center" Margin="0,0,0,30">
                                <wpfui:SymbolIcon
                                    FontSize="48"
                                    Foreground="{DynamicResource AccentBrush}"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,16"
                                    Symbol="Key24" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Style="{DynamicResource HeaderTextStyle}"
                                    Text="Steam Authentication" />
                            </StackPanel>

                            <!--  Instructions  -->
                            <Border
                                Background="{DynamicResource TertiaryBackgroundBrush}"
                                CornerRadius="10"
                                Margin="0,0,0,25"
                                Padding="20">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,15"
                                        Style="{DynamicResource SubheaderTextStyle}"
                                        Text="ðŸ“‹ Setup Instructions" />

                                    <StackPanel>
                                        <TextBlock
                                            Margin="0,0,0,8"
                                            Style="{DynamicResource BodyTextStyle}"
                                            Text="1ï¸âƒ£ Click the login button below" />
                                        <TextBlock
                                            Margin="0,0,0,8"
                                            Style="{DynamicResource BodyTextStyle}"
                                            Text="2ï¸âƒ£ Complete Steam authentication in browser" />
                                        <TextBlock
                                            Margin="0,0,0,8"
                                            Style="{DynamicResource BodyTextStyle}"
                                            Text="3ï¸âƒ£ Click refresh to verify login status" />
                                        <TextBlock Style="{DynamicResource BodyTextStyle}" Text="4ï¸âƒ£ Keep browser open until verification is complete" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!--  Status Section  -->
                            <Border
                                Background="{DynamicResource TertiaryBackgroundBrush}"
                                CornerRadius="10"
                                Margin="0,0,0,25"
                                Padding="20">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,15"
                                        Style="{DynamicResource SubheaderTextStyle}"
                                        Text="ðŸ” Authentication Status" />

                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                        <Border
                                            CornerRadius="15"
                                            Margin="0,0,15,0"
                                            Padding="15,8">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#FF4444" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsLoggedIn}" Value="True">
                                                            <Setter Property="Background" Value="#44AA44" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <StackPanel Orientation="Horizontal">
                                                <Ellipse
                                                    Fill="White"
                                                    Height="12"
                                                    Margin="0,0,8,0"
                                                    Width="12" />
                                                <TextBlock FontWeight="Medium" Foreground="White">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Not Connected" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsLoggedIn}" Value="True">
                                                                    <Setter Property="Text" Value="Connected" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!--  Action Buttons  -->
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <wpfui:Button
                                    Appearance="Primary"
                                    Click="LoginButton_OnClick"
                                    Content="ðŸ”‘ Login to Steam"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Margin="0,0,15,0"
                                    Padding="20,15" />
                                <wpfui:Button
                                    Appearance="Secondary"
                                    Click="RefreshButton_OnClick"
                                    Content="ðŸ”„ Refresh Status"
                                    FontSize="14"
                                    Padding="20,15" />
                            </StackPanel>
                        </StackPanel>
                    </wpfui:Card>
                </ScrollViewer>
            </TabItem>

            <!--  Session Tab  -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <wpfui:SymbolIcon Margin="0,0,8,0" Symbol="Games24" />
                        <TextBlock FontWeight="Medium" Text="Session" />
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <ContentControl x:Name="SessionContentControl" />
                </TabItem.Content>
            </TabItem>

            <!--  Config Tab  -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <wpfui:SymbolIcon Margin="0,0,8,0" Symbol="Settings24" />
                        <TextBlock FontWeight="Medium" Text="Settings" />
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <wpfui:Card
                            HorizontalAlignment="Center"
                            Margin="20"
                            Padding="40"
                            VerticalAlignment="Center"
                            Width="500">
                            <StackPanel>
                                <!--  Header  -->
                                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,30">
                                    <wpfui:SymbolIcon
                                        FontSize="48"
                                        Foreground="{DynamicResource AccentBrush}"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,16"
                                        Symbol="Settings24" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        Style="{DynamicResource HeaderTextStyle}"
                                        Text="Configuration" />
                                </StackPanel>

                                <!--  Steam API Key  -->
                                <TextBlock Style="{DynamicResource SubheaderTextStyle}" Text="ðŸ” Steam API Key" />
                                <Border
                                    Background="{DynamicResource TertiaryBackgroundBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Margin="0,0,0,20">
                                    <TextBox
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="15,12"
                                        x:Name="ApiKeyBox" />
                                </Border>

                                <!--  Steam ID  -->
                                <TextBlock Style="{DynamicResource SubheaderTextStyle}" Text="ðŸ†” Steam ID" />
                                <Border
                                    Background="{DynamicResource TertiaryBackgroundBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Margin="0,0,0,25">
                                    <TextBox
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="15,12"
                                        x:Name="SteamIdBox" />
                                </Border>

                                <!--  Fetch Button  -->
                                <wpfui:Button
                                    Appearance="Primary"
                                    Click="ApiFetchButton_OnClick"
                                    Content="ðŸ”„ Fetch via API"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Center"
                                    Padding="20,15" />
                            </StackPanel>
                        </wpfui:Card>
                    </ScrollViewer>
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>