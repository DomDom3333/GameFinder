<UserControl
    x:Class="ArcadeMatch.Avalonia.Controls.SessionStart"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="450" Spacing="20">
            <TextBlock HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Text="Join or Create Session" />
            <TextBlock Text="Display Name" />
            <TextBox
                Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}"
                Watermark="Your Display-name" />
            <Button
                Command="{Binding StartNewSessionCommand}"
                Content="ðŸŽ® Start New Session"
                HorizontalAlignment="Stretch" />
            <Button
                Command="{Binding JoinSessionCommand}"
                Content="ðŸ¤ Join Existing Session"
                HorizontalAlignment="Stretch" />
            <TextBlock Text="Session Code" />
            <TextBox
                MaxLength="4"
                Text="{Binding SessionCode, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
    </Grid>
</UserControl>

