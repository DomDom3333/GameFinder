<UserControl
    x:Class="ArcadeMatch.Avalonia.Controls.MatchResult"
    xmlns="https://github.com/avaloniaui"
    xmlns:sessionVm="clr-namespace:ArcadeMatch.Avalonia.ViewModels.Sessions"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Background="#141822">
            <StackPanel Margin="24" Spacing="12" HorizontalAlignment="Center">
                <TextBlock FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Text="{Binding ResultTitle}" />
                <TextBlock HorizontalAlignment="Center" MaxWidth="420" Text="{Binding Subtitle}" TextWrapping="Wrap" />
                <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                    <Button Command="{Binding CopyMatchesCommand}" Content="ðŸ“‹ Copy match list" IsVisible="{Binding HasMatches}" />
                    <Button Command="{Binding BackCommand}" Content="ðŸ  Back to Home" />
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Margin="24" Background="#1F2433" CornerRadius="12" Padding="12">
            <ScrollViewer IsVisible="{Binding HasMatches}" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Matches}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="sessionVm:MatchResultViewModel+MatchResultItemViewModel">
                            <Border Margin="8" Width="220" Background="#262C3E" CornerRadius="10">
                                <StackPanel>
                                    <Border Height="140" ClipToBounds="True">
                                        <Image Stretch="UniformToFill" Source="{Binding Cover}" />
                                    </Border>
                                    <StackPanel Margin="12" Spacing="6">
                                        <TextBlock Text="{Binding Game.Data.Name}" FontWeight="SemiBold" TextWrapping="Wrap" />
                                        <TextBlock Text="{Binding Game.Data.ShortDescription}" Foreground="#ADB4C5" FontSize="12" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" />
                                        <TextBlock Text="{Binding Game.LikesDisplay}" Foreground="#FFD166" FontSize="12" FontWeight="SemiBold" TextWrapping="Wrap" />
                                        <Grid ColumnDefinitions="*,Auto" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Game.ParticipantsDisplay}" Foreground="#ADB4C5" FontSize="11" VerticalAlignment="Center" />
                                            <Button
                                                Grid.Column="1"
                                                Command="{Binding DataContext.OpenSteamCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Content="ðŸ”—"
                                                ToolTip.Tip="Open on Steam" />
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12" IsVisible="{Binding IsEmpty}">
            <TextBlock Text="ðŸ˜•" FontSize="48" HorizontalAlignment="Center" />
            <TextBlock Text="No liked games yet." FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center" />
            <TextBlock Text="Try inviting more friends or broadening your libraries to keep swiping!" Foreground="#ADB4C5" TextWrapping="Wrap" TextAlignment="Center" MaxWidth="320" />
        </StackPanel>
    </Grid>
</UserControl>
