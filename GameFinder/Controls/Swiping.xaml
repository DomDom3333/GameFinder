<UserControl x:Class="GameFinder.Controls.Swiping"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             KeyDown="Window_Keydown">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <wpfui:Card x:Name="ProfileCard" Width="350" Padding="15" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock x:Name="GameNameTextBlock" Text="Game Name" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" TextAlignment="Center"/>
                <TextBlock x:Name="DescriptionTextBlock" Text="Short Description" FontSize="14" Margin="0,0,0,10" TextWrapping="Wrap"/>
                <Image x:Name="GameImage" Width="300" Height="150" Stretch="UniformToFill" Margin="0,0,0,10"/>
                <TextBlock Text="Genres:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <TextBlock x:Name="GenresTextBlock" Text="Genres Info" FontSize="14" Margin="0,0,0,10" TextWrapping="Wrap"/>
                <TextBlock Text="Supported Languages:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <TextBlock x:Name="LanguagesTextBlock" Text="Languages Info" FontSize="14" Margin="0,0,0,10" TextWrapping="Wrap"/>
                <TextBlock Text="Recomendations:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <TextBlock x:Name="PriceTextBlock" Text="Price Info" FontSize="14" Margin="0,0,0,10" TextWrapping="Wrap"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <wpfui:Button x:Name="Like" Content="Like" Width="100" IsEnabled="False" Margin="5" Appearance="Success" Click="OnLikeButtonClick"/>
                    <wpfui:Button x:Name="Dislike" Content="Dislike" Width="100" IsEnabled="False" Margin="5" Appearance="Danger" Click="OnDislikeButtonClick"/>
                </StackPanel>
            </StackPanel>
        </wpfui:Card>
    </Grid>
</UserControl>
