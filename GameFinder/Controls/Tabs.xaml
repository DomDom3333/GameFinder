<UserControl x:Class="GameFinder.Controls.Tabs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:selfmade="clr-namespace:GameFinder.Controls"
             xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <TabControl Margin="8">
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="10" Height="10" Fill="DarkGray" Margin="5"/>
                        <TextBlock>Home</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <wpfui:Card Padding="15" Margin="10">
                    <StackPanel Orientation="Vertical" Margin="5">
                        <TextBlock FontSize="18" FontWeight="SemiBold" Padding="5">Login instructions</TextBlock>
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,5">
                            Click the login button. It will open a web browser with the Steam login page. Log in and DO NOT CLOSE THE BROWSER YET!
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                            Once you have logged in, click the refresh button. Once the login has been verified, you can close the web browser
                        </TextBlock>
                        <StackPanel Orientation="Vertical" Margin="5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="10">Login Status:</TextBlock>
                                <Ellipse Width="20" Height="20" Margin="10">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="Red"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsLoggedIn}" Value="True">
                                                    <Setter Property="Fill" Value="Green"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <wpfui:Button Margin="10" Appearance="Primary" Click="LoginButton_OnClick">Login</wpfui:Button>
                                <wpfui:Button Margin="10" Appearance="Secondary" Click="RefreshButton_OnClick">Refresh</wpfui:Button>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </wpfui:Card>
            </TabItem>
            <TabItem Padding="10">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="10" Height="10" Fill="DarkGray" Margin="5"/>
                        <TextBlock>Session</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <ContentControl x:Name="SessionContentControl"/>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="10" Height="10" Fill="DarkGray" Margin="5"/>
                        <TextBlock>Config</TextBlock>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
